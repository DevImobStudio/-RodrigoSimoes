<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imobiliaria.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#1b4000</Color>
            <Color x:Key="colorPrimary">#ab4063</Color>
            <Color x:Key="colorPrimaryDark">#222e38</Color>
            <Color x:Key="colorAccent">#1b4063</Color>

            <Color x:Key="colorSecundaria">#afb3b5</Color>
            <Color x:Key="CorTexto">#000</Color>

            <Color x:Key="colorTelas">#e1e5e8</Color>

            <Color x:Key="colorClara">#fcfcfc</Color>
            
            <x:Int16 x:Key="IHeight">40</x:Int16>
            <x:Int16 x:Key="IWidth">40</x:Int16>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource colorPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>



        </ResourceDictionary>
    </Application.Resources>
</Application>