<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imobiliaria.Views.ViewPin"
             WidthRequest="80" 
             HeightRequest="38"
             AnchorX="0.5"
             AnchorY="1.0"
             xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize">
    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        <iconize:IconLabel Text="fas-map-marker-alt" TextColor="{StaticResource colorPrimary}" FontSize="Large" HorizontalTextAlignment="Center" 
                BackgroundColor="Transparent" WidthRequest="90" HeightRequest="20"
                 AbsoluteLayout.LayoutBounds="0, 1, 80, 80"
                AbsoluteLayout.LayoutFlags="None" />
       

    </AbsoluteLayout>
    </StackLayout>